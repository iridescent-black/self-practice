{
  "include": ["./**/*.ts"],
  "compilerOptions": {
    "lib": ["esNext", "DOM"],

    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,

    "moduleResolution": "node",
    "esModuleInterop": true,
    "preserveSymlinks": true,
    "resolveJsonModule": true,
    "module": "ESNext",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
